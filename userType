user type code show content login: 

import { IUserSession } from '@/app/core/models';
import { AuthService } from '@/app/core/services/auth.service';
import { CommonModule } from '@angular/common';
import { Component, ElementRef, HostListener, Input, OnInit, output } from '@angular/core';

@Component({
  selector: 'app-profile',
  imports: [CommonModule],
  templateUrl: './profile.html',
  styleUrl: './profile.scss',
})
export class Profile implements OnInit {
  logoutClicked = output<void>();

  // userRole: 'admin' | 'coach' | 'employee' = 'employee';

  @Input() isOpen = false;
  currentUser: IUserSession | null = null;

  constructor(
    private eRef: ElementRef,
    private authService: AuthService,
  ) {}

  ngOnInit(): void {
    this.authService.getCurrentUser$().subscribe((user) => {
      this.currentUser = user;
    });
  }

  open() {
    this.isOpen = true;
  }

  close() {
    this.isOpen = false;
  }

  toggle() {
    this.isOpen = !this.isOpen;
  }

  // Close when clicking outside
  @HostListener('document:click', ['$event'])
  clickOutside(event: Event) {
    if (!this.eRef.nativeElement.contains(event.target)) {
      this.isOpen = false;
    }
  }

  toggleProfilePanel(event: Event) {
    event.stopPropagation();
    this.isOpen = !this.isOpen;
  }

  onLogoutClick() {
    this.logoutClicked.emit(); // ðŸ‘ˆ notify parent
    this.close(); // optional: close the panel after logout
  }
}


